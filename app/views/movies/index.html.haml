-#  This file is app/views/movies/index.html.haml
%h1 All Movies of Rotten Tobacco

%div.table-responsive
  %table#movies.table.table-bordered.table-hover.table-striped
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th More Info
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.title
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)